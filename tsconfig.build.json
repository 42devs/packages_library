{
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist",
    "lib"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "@42devs/*": ["./packages/*"]
    }
  }
}
